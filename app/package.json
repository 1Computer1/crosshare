{
  "name": "crosshare-next",
  "version": "0.1",
  "description": "Crosshare ported to next.js",
  "author": "Mike D",
  "private": true,
  "browserslist": [
    ">0.2%",
    "last 2 versions",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "scripts": {
    "eslint": "npx eslint __mocks__ __tests__ components lib pages reducers",
    "clean": "rimraf nextjs/",
    "dev": "GOOGLE_APPLICATION_CREDENTIALS=../serviceAccountKey.json next dev",
    "analyze": "ANALYZE=true NO_SENTRY=true next build",
    "build": "NO_SENTRY=true next build",
    "start": "next start",
    "predeploy": "tsc && yarn clean && next build",
    "deploy": "npx firebase deploy --only hosting:prod,functions:nextjs",
    "prodDeploy": "npx firebase deploy --only hosting:prod,functions:nextjs",
    "stagingDeploy": "npx firebase deploy --only hosting:staging,functions:staging",
    "emulator-dev": "NEXT_PUBLIC_USE_FIREBASE_EMULATOR=1 FIRESTORE_EMULATOR_HOST=localhost:8080 npx firebase emulators:exec 'next dev'",
    "test": "NEXT_PUBLIC_USE_FIREBASE_EMULATOR=1 FIRESTORE_EMULATOR_HOST=localhost:8080 npx firebase emulators:exec 'jest --watch'"
  },
  "engines": {
    "node": "10"
  },
  "dependencies": {
    "@emotion/babel-plugin": "^11.0.0",
    "@emotion/react": "^11.1.1",
    "@juggle/resize-observer": "^3.2.0",
    "@popperjs/core": "^2.5.4",
    "@sentry/node": "^5.27.6",
    "@use-it/event-listener": "^0.1.3",
    "canvas": "^2.6.1",
    "date-fns": "^2.16.1",
    "fast-deep-equal": "^3.1.3",
    "firebase": "^8.0.2",
    "firebase-admin": "^9.4.1",
    "firebase-functions": "^3.6.1",
    "fp-ts": "^2.9.0",
    "idb-keyval": "^3.2.0",
    "io-ts": "^2.2.12",
    "jspdf": "^2.1.1",
    "next": "^10.0.1",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-firebase-hooks": "https://github.com/mdirolf/react-firebase-hooks.git#isolatedmods",
    "react-icons": "^3.9.0",
    "react-image-crop": "^8.6.5",
    "react-popper": "^2.2.4",
    "react-window": "^1.8.6",
    "simple-markdown": "^0.7.2",
    "use-resize-observer": "^7.0.0",
    "worker-loader": "^3.0.5"
  },
  "devDependencies": {
    "@emotion/eslint-plugin": "^11.0.0",
    "@emotion/jest": "^11.1.0",
    "@firebase/rules-unit-testing": "^1.1.1",
    "@modern-dev/jsbn": "^1.2.5",
    "@next/bundle-analyzer": "^10.0.1",
    "@next/eslint-plugin-next": "^10.0.1",
    "@sentry/webpack-plugin": "^1.11.1",
    "@testing-library/jest-dom": "^5.11.6",
    "@testing-library/react": "^11.1.2",
    "@types/jest-in-case": "^1.0.3",
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "@types/react-image-crop": "^8.1.2",
    "@types/react-window": "^1.8.2",
    "@typescript-eslint/eslint-plugin": "^4.8.1",
    "@typescript-eslint/parser": "^4.8.1",
    "@zeit/next-source-maps": "0.0.4-canary.1",
    "eslint": "^7.13.0",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-react": "^7.21.5",
    "eslint-plugin-react-hooks": "^4.2.0",
    "firebase-functions-test": "^0.2.3",
    "jest": "^26.6.3",
    "jest-in-case": "^1.0.2",
    "leaked-handles": "^5.2.0",
    "mockdate": "^3.0.2",
    "prettier": "^2.0.5",
    "rimraf": "^3.0.2",
    "typescript": "^4.0.5",
    "wait-for-expect": "^3.0.2"
  },
  "jest": {
    "testEnvironment": "./__test-utils__/custom-jest-environment.js",
    "moduleNameMapper": {
      "autofill.worker": "<rootDir>/lib/__mocks__/autofill.worker.ts"
    },
    "setupFilesAfterEnv": [
      "<rootDir>/setupTestsAfterEnv.ts"
    ]
  }
}
