{
  "name": "crosshare-next",
  "version": "0.1",
  "description": "Crosshare ported to next.js",
  "author": "Mike D",
  "private": true,
  "browserslist": [
    ">0.2%",
    "last 2 versions",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "scripts": {
    "eslint": "npx eslint __mocks__ __tests__ components lib pages reducers",
    "clean": "rimraf nextjs/",
    "dev": "GOOGLE_APPLICATION_CREDENTIALS=../serviceAccountKey.json next dev",
    "analyze": "ANALYZE=true NO_SENTRY=true next build",
    "build": "NO_SENTRY=true next build",
    "start": "next start",
    "predeploy": "tsc && yarn clean && next build",
    "prodDeploy": "npx firebase deploy --only hosting:prod",
    "stagingDeploy": "npx firebase deploy --only hosting:staging",
    "test": "NEXT_PUBLIC_USE_FIREBASE_EMULATOR=1 FIRESTORE_EMULATOR_HOST=localhost:8080 npx firebase emulators:exec --only firestore 'jest'"
  },
  "engines": {
    "node": "12"
  },
  "dependencies": {
    "@emotion/babel-plugin": "^11.2.0",
    "@emotion/react": "^11.1.5",
    "@juggle/resize-observer": "^3.3.0",
    "@popperjs/core": "^2.9.1",
    "@sentry/node": "^6.2.3",
    "@use-it/event-listener": "^0.1.3",
    "canvas": "^2.7.0",
    "color2k": "^1.2.4",
    "date-fns": "^2.19.0",
    "fast-deep-equal": "^3.1.3",
    "firebase": "^8.3.1",
    "firebase-admin": "^9.5.0",
    "firebase-functions": "^3.13.2",
    "fp-ts": "^2.9.5",
    "idb-keyval": "5.0.4",
    "io-ts": "^2.2.16",
    "jspdf": "^2.3.1",
    "levelup": "^4.4.0",
    "lodash": "^4.17.21",
    "next": "^10.0.9",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-firebase-hooks": "https://github.com/mdirolf/react-firebase-hooks.git#isolatedmods",
    "react-fluid-table": "^0.4.2",
    "react-icons": "^4.2.0",
    "react-image-crop": "^8.6.5",
    "react-popper": "^2.2.5",
    "react-window": "^1.8.6",
    "rocksdb": "^4.1.0",
    "simple-markdown": "^0.7.3",
    "use-resize-observer": "^7.0.0",
    "worker-loader": "^3.0.8"
  },
  "devDependencies": {
    "@emotion/eslint-plugin": "^11.2.0",
    "@emotion/jest": "^11.2.1",
    "@firebase/rules-unit-testing": "^1.2.5",
    "@modern-dev/jsbn": "^1.2.5",
    "@next/bundle-analyzer": "^10.0.9",
    "@next/eslint-plugin-next": "^10.0.9",
    "@sentry/webpack-plugin": "^1.14.2",
    "@testing-library/jest-dom": "^5.11.10",
    "@testing-library/react": "^11.2.5",
    "@types/jest-in-case": "^1.0.3",
    "@types/levelup": "^4.3.0",
    "@types/lodash": "^4.14.168",
    "@types/react": "^17.0.3",
    "@types/react-dom": "^17.0.3",
    "@types/react-image-crop": "^8.1.2",
    "@types/react-window": "^1.8.2",
    "@types/rimraf": "^3.0.0",
    "@types/rocksdb": "^3.0.0",
    "@typescript-eslint/eslint-plugin": "^4.19.0",
    "@typescript-eslint/parser": "^4.19.0",
    "@zeit/next-source-maps": "0.0.4-canary.1",
    "eslint": "^7.23.0",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-react": "^7.23.1",
    "eslint-plugin-react-hooks": "^4.2.0",
    "firebase-functions-test": "^0.2.3",
    "firebase-tools": "^9.8.0",
    "jest": "^26.6.3",
    "jest-in-case": "^1.0.2",
    "leaked-handles": "^5.2.0",
    "mockdate": "^3.0.5",
    "prettier": "^2.2.1",
    "rimraf": "^3.0.2",
    "ts-node": "^9.1.1",
    "typescript": "^4.2.3",
    "wait-for-expect": "^3.0.2",
    "webpack": "4"
  },
  "jest": {
    "testEnvironment": "./__test-utils__/custom-jest-environment.js",
    "moduleNameMapper": {
      "autofill.worker": "<rootDir>/lib/__mocks__/autofill.worker.ts"
    },
    "setupFilesAfterEnv": [
      "<rootDir>/setupTestsAfterEnv.ts"
    ]
  }
}
