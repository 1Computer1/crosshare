{
  "name": "crosshare-next",
  "version": "0.1",
  "description": "Crosshare ported to next.js",
  "author": "Mike D",
  "private": true,
  "main": "server.js",
  "browserslist": [
    ">0.2%",
    "last 2 versions",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "scripts": {
    "eslint": "npx eslint __mocks__ __tests__ components lib pages reducers",
    "clean": "rimraf nextjs/ out/",
    "dev": "next dev",
    "analyze": "ANALYZE=true next build",
    "build": "next build",
    "start": "next start",
    "predeploy": "yarn clean && next build && node ./scripts/export.js",
    "deploy": "npx firebase deploy --only hosting:next,functions:nextjs",
    "stagingDeploy": "npx firebase deploy --only hosting:staging,functions:staging",
    "emulator-dev": "NEXT_PUBLIC_USE_FIREBASE_EMULATOR=1 npx firebase emulators:exec 'next dev'",
    "test": "NEXT_PUBLIC_USE_FIREBASE_EMULATOR=1 npx firebase emulators:exec 'jest --watch'"
  },
  "engines": {
    "node": "10"
  },
  "dependencies": {
    "@emotion/babel-preset-css-prop": "^10.0.27",
    "@emotion/core": "^10.0.28",
    "@firebase/app": "^0.6.4",
    "@next/bundle-analyzer": "^9.4.4",
    "@sentry/node": "^5.17.0",
    "@sentry/webpack-plugin": "1.11.1",
    "@types/lz-string": "^1.3.34",
    "@types/react": "^16.9.35",
    "@types/react-window": "^1.8.2",
    "@use-it/event-listener": "^0.1.3",
    "@zeit/next-source-maps": "0.0.4-canary.1",
    "fast-deep-equal": "^3.1.3",
    "firebase": "^7.14.4",
    "firebase-admin": "^8.11.0",
    "firebase-functions": "^3.6.1",
    "fp-ts": "^2.5.3",
    "io-ts": "^2.1.3",
    "localforage": "^1.7.3",
    "lz-string": "^1.4.4",
    "next": "^9.4.0",
    "next-build-id": "^3.0.0",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-firebase-hooks": "^2.1.1",
    "react-icons": "^3.9.0",
    "react-toastify": "^5.5.0",
    "react-window": "^1.8.5",
    "swr": "^0.2.0",
    "worker-loader": "^2.0.0"
  },
  "devDependencies": {
    "@firebase/testing": "^0.15.0",
    "@modern-dev/jsbn": "^1.2.5",
    "@next/eslint-plugin-next": "^9.4.4",
    "@testing-library/jest-dom": "^5.8.0",
    "@testing-library/react": "^10.0.4",
    "@types/jest-in-case": "^1.0.2",
    "@typescript-eslint/eslint-plugin": "^3.0.2",
    "@typescript-eslint/parser": "^3.0.2",
    "eslint": "^7.1.0",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-react": "^7.20.0",
    "eslint-plugin-react-hooks": "^4.0.4",
    "firebase-functions-test": "^0.2.1",
    "firebase-tools": "^8.4.0",
    "jest": "^26.0.1",
    "jest-emotion": "^10.0.32",
    "jest-in-case": "^1.0.2",
    "leaked-handles": "^5.2.0",
    "prettier": "^2.0.5",
    "rimraf": "^3.0.2",
    "shelljs": "^0.8.4",
    "typescript": "^3.9.3",
    "wait-for-expect": "^3.0.2"
  },
  "jest": {
    "moduleNameMapper": {
      "\\.worker.ts": "<rootDir>/__mocks__/workerMock.ts"
    },
    "setupFilesAfterEnv": [
      "<rootDir>/setupTestsAfterEnv.ts"
    ]
  }
}
