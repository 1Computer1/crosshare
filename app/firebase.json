{
  "firestore": {
    "rules": "firestore.rules"
  },
  "functions": {
    "source": ".",
    "ignore": [
      "firebase.json",
      "firebase-debug.log",
      "**/.*",
      "**/node_modules/**",
      "__mocks__/**",
      "__tests__/**",
      "components/**",
      "lib/**",
      "out/**",
      "pages/**",
      "public/**",
      "reducers/**",
      "scripts/**",
      "vendor/**",
      "firestore.rules"
    ]
  },
  "hosting": {
    "target": "next",
    "public": "out",
    "cleanUrls": true,
    "rewrites": [
      {
        "source": "**",
        "function": "nextjs-server"
      }
    ],
    "redirects": [
      {
        "source": "/category/dailymini",
        "destination": "/categories/dailymini",
        "type": 301
      }
    ]
  }
}
