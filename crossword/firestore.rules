rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function isAuthor() {
      return request.auth.uid != null && resource.data.authorId == request.auth.uid;
    }
    function authorSetCorrectly() {
      return request.auth.uid != null && request.auth.uid == request.resource.data.authorId;
    }
    function isAdmin() {
      return request.auth.token.admin;
    }
    match /{document=**} {
      allow read, write: if false;
    }
    match /crosswords/{crosswordId} {
      allow get: if request.auth != null && request.time > resource.data.publishTime;
      allow create: if isAdmin();
    }
    match /unmoderated/{crosswordId} {
      allow get: if isAuthor() || isAdmin();
      allow create: if isAdmin() && authorSetCorrectly();
    }
  }
}
